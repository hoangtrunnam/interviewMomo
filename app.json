{
  "expo": {
    "name": "baseExpoApp",
    "slug": "baseExpoApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/appIcon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/images/splash.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "package": "com.hoangnamws.baseExpoApp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow baseExpoApp to use Face ID."
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/Mulish-Black.ttf",
            "./src/assets/fonts/Mulish-BlackItalic.ttf",
            "./src/assets/fonts/Mulish-Bold.ttf",
            "./src/assets/fonts/Mulish-BoldItalic.ttf",
            "./src/assets/fonts/Mulish-ExtraBold.ttf",
            "./src/assets/fonts/Mulish-ExtraBoldItalic.ttf",
            "./src/assets/fonts/Mulish-ExtraLight.ttf",
            "./src/assets/fonts/Mulish-ExtraLightItalic.ttf",
            "./src/assets/fonts/Mulish-Italic.ttf",
            "./src/assets/fonts/Mulish-Light.ttf",
            "./src/assets/fonts/Mulish-LightItalic.ttf",
            "./src/assets/fonts/Mulish-Medium.ttf",
            "./src/assets/fonts/Mulish-MediumItalic.ttf",
            "./src/assets/fonts/Mulish-Regular.ttf",
            "./src/assets/fonts/Mulish-SemiBold.ttf",
            "./src/assets/fonts/Mulish-SemiBoldItalic.ttf"
          ]
        }
      ],
      "expo-localization"
    ],
    "extra": {
      "eas": {
        "projectId": "10bb7de1-fd6e-4429-bfae-19bd2f5fe252"
      }
    }
  }
}
